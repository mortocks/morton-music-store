{
  "git.ignoreLimitWarning": true,
  "files.exclude": {
    "**/node_modules": true,
    ".next" : true
  },
  "editor.formatOnSave": false,
  // Enable per-language
  "[javascript]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.formatOnSave": true
  },
  "[terraform-vars]": {
    "editor.formatOnSave": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "cSpell.words": [
    "lato",
    "snipcart",
    "tailwindcss"
  ]
}